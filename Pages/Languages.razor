@page "/Languages"
@page "/Language"
<PageTitle>Language Dimension</PageTitle>
<MudPaper Class="ma-6">
    <MudExpansionPanels>
        @foreach (var component in list)
        { 
            <MudExpansionPanel Text="@component.Name">
                <MudGrid>
                    <MudItem xs="12">
                        <MudTabs Elevation="4" Rounded="true" Centered="true" Style="@($"color:{Theme.Palette.SuccessLighten}; background:{Theme.Palette.Dark.ColorDarken};")">
                            <MudTabPanel Icon=@CustomIcons.CSharpLogo Text="C#">
                                @RenderComponent(component.Sharp)
                            </MudTabPanel>
                            <MudTabPanel Icon=@CustomIcons.PythonLogo Text ="Python">
                                @RenderComponent(component.Python) 
                            </MudTabPanel>
                            <MudTabPanel Icon=@CustomIcons.CPlusPlusLogo Text ="C++">
                                @RenderComponent(component.Plus)
                            </MudTabPanel>
                        </MudTabs>
                    </MudItem>
                </MudGrid>
            </MudExpansionPanel>
        }
    </MudExpansionPanels>
</MudPaper>

@code {
    private MudTheme Theme = new MudTheme();
    List<(ComponentBase Sharp, ComponentBase Python, ComponentBase Plus, string Name)> list = new()
    {  
        (new CommentSharp(), new CommentPython(), new CommentPlus(),"Commenting"),
        (new WriteSharp(), new WritePython(), new WritePlus(),"Write to Console"),
        (new PrimitiveSharp(), new PrimitivePython(), new PrimitivePlus(),"Primitive Data Types"),
        (new VariableSharp(), new VariablePython(), new VariablePlus(),"Variable Decleration"),
        (new InputSharp(), new InputPython(), new InputPlus(),"Take User Input"),
        (new MathematicsSharp(), new MathematicsPython(), new MathematicsPlus(),"Mathematical Operations"),
        (new StringSharp(), new StringPython(), new StringPlus(),"String"),
        (new IfElseSharp(), new IfElsePython(), new IfElsePlus(),"If Else"),
        (new LoopSharp(), new LoopPython(), new LoopPlus(),"Loop"), 
        (new LinearSharp(), new LinearPython(), new LinearPlus(),"Linear Data Types"),
        (new FunctionSharp(), new FunctionPython(), new FunctionPlus(),"Function"),
        (new DictSharp(), new DictPython(), new DictPlus(),"Dictionary and Hashset"),
        (new ClassSharp(), new ClassPython(), new ClassPlus(),"Class"),
        (new InterfaceSharp(), new InterfacePython(), new InterfacePlus(),"Interface And Inheritance")
    };
    private RenderFragment RenderComponent(ComponentBase component)
    {
        RenderFragment fragment = builder =>
        {
            builder.OpenComponent(0, component.GetType());
            builder.CloseComponent();
        };

        return fragment;
    }
}
