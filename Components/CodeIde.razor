 @page "/CodeIde"
<PageTitle>C# IDE</PageTitle>
<style>
    .custom-iframe {
        height: 800px;
        width : 100%;

    }
 </style>
<MudSelect 
    @bind-Value="defaultTheme"  
    OpenIcon="@Icons.Material.Filled.ColorLens" 
    AdornmentColor="Color.Secondary">
    @foreach (var item in themesList)
    {
        <MudSelectItem Value="@item">@item</MudSelectItem>
    }
</MudSelect>
<MudCard >
    <MudCardContent>
        <iframe src="https://paiza.io/projects/e/C2rDfE-BpDKOUIUWvIs4fQ?theme=@(defaultTheme)"
                class="custom-iframe"
                scrolling="no"
                seamless="seamless">
        </iframe>
    </MudCardContent>
</MudCard> 

