<MudItem xs="12">
    <MudTabs Elevation="4" Rounded="true" Centered="true" Color="@Color.Primary">
        @if (SnippetList != null)
        {
            @foreach (var item in SnippetList)
            {
                <MudTabPanel Text=@item.Language>
                    <Pastebin 
                        HeadingName="@item.HeadingName" 
                        BoderColor="@item.BoderColor" 
                        BoderThickness="@item.BoderThickNess" 
                        HeightOfIframe="@item.HeightOfFrame" 
                        SourceURL="@item.SourceUrl" /> 
                </MudTabPanel>
            }
        } 
    </MudTabs>
</MudItem>

@code{ 
    [Parameter,EditorRequired]
    public List<Snippet> SnippetList { get; set; }
}