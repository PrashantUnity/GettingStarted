@inject IJSRuntime JSRuntime
<pre class="line-numbers"><code class="language-@(LanguageName)">@CodeInStringFormat</code></pre>


@code {
    // Inside a .razor file or a separate class
    @inject IJSRuntime JSRuntime

    [Parameter, EditorRequired]
    public string LanguageName { get; set; } = "C#";

    [Parameter,EditorRequired] 
    public string CodeInStringFormat { get; set; }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializePrism");
        }
    }

}
